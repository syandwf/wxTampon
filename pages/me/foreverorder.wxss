/* pages/me/foreverorder.wxss */
page{
  background-color: rgb(240, 240, 240);
}
.order_bg{
  width: 88%;
  margin: 16rpx 4%;
  padding: 2% 2%;
  /* height: 100rpx; */
  background-color: white;
  border-radius: 16rpx;
  /* border: 1rpx solid red; */
}
.order_body{
  display: flex;
}
.order_body image{
  width: 88px;
  height: 88px;
  border-radius: 16rpx;
  border: 1rpx solid #fc5871;
}
.order_text{
  margin-left: 4%;
  width: 70%;
  height: 88px;
  position: relative;
  /* border: 1rpx solid blue; */
}
.order_bottom{
  text-align: right;
}
.lj_xufei{
  position:relative;
  height:36px;
  margin-top:6px;
}
.lj_xufei button{
  position:absolute;
  right:0;
  width:26%;
  height:30px;
  line-height:30px;
  font-size:28rpx;
  color: #fc5871;
  border-radius:28rpx;
  /* background-color: rgba(0, 0, 0, 0); */
  border: 1px solid #fc5871;
}